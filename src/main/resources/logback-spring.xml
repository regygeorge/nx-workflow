<configuration>
    <property name="LOG_DIR" value="logs"/>

    <!-- App log (optional) -->
    <appender name="APP" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/application.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Flow trace file -->
    <appender name="FLOW_TRACE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/flow-trace.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/flow-trace.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>14</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level iid=%X{iid} %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Route only engine traces to FLOW_TRACE -->
    <logger name="com.miniflow.core.DbBackedEngine" level="DEBUG" additivity="false">
        <appender-ref ref="FLOW_TRACE"/>
    </logger>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="APP"/>
    </root>
</configuration>